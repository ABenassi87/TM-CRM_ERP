{
    "name": "company",
    "version": "0.1.000",
    "description": "Gestion des societes (prospects, clients, fournisseurs)",
    "author": {
        "name": "TM - ToManage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TM-js/bill.git"
    },
    "engines": {
        "node": "4.6.x",
        "TM": "0.5.x"
    },
    "contributors": [
        "Herve Prot <herve.prot@tomanage.fr>"
    ],
    "license": "OSL v3",
    "rights": {
        "societe": [{
                "desc": "Lire les societes",
                "perm": {
                    "read": true
                }
            },
            {
                "desc": "Creer modifier les societes",
                "perm": {
                    "write": false
                }
            },
            {
                "desc": "Supprimer les societes",
                "perm": {
                    "delete": false
                }
            },
            {
                "desc": "Exporter les societes",
                "perm": {
                    "export": false
                }
            },
            {
                "desc": "Affecter des commerciaux",
                "perm": {
                    "commercial": false
                }
            },
            {
                "desc": "Afficher les statistiques des ventes",
                "perm": {
                    "stats": false
                }
            },
            {
                "desc": "Consulter tous les tiers par utilisateurs internes (sinon uniquement si contact commercial). Non effectif pour utilisateurs externes (tjs limités à eux-meme).",
                "perm": {
                    "seeAll": false
                }
            },
            {
                "desc": "Modifier et gerer la segmentation",
                "perm": {
                    "segmentation": false
                }
            },
            {
                "desc": "Modifier l'entité auquel est attaché le compte",
                "perm": {
                    "entity": false
                }
            }
        ]
    },
    "menus": {
        "menu:companies": {
            "position": 2,
            "perms": "societe.read",
            "enabled": "conf.societe.enabled || conf.fournisseur.enabled",
            "usertype": 2,
            "title": "companies:ThirdParties",
            "icon": "fa-institution",
            "submenus": {
                "menu:customers": {
                    "position": 1,
                    "url": "/erp/#!/societe?type=PROSPECT_CUSTOMER",
                    "perms": "societe.read",
                    "enabled": "$conf->societe->enabled",
                    "usertype": 2,
                    "title": "companies:ListCustomersShort",
                    "fk_menu": "menu:companies",
                    "icon": "fa-institution"
                },
                "menu:suppliers": {
                    "position": 2,
                    "url": "/erp/#!/societe?type=SUPPLIER_SUBCONTRACTOR",
                    "perms": "societe.read",
                    "enabled": "$conf->societe->enabled",
                    "usertype": 2,
                    "title": "companies:ListSuppliersShort",
                    "fk_menu": "menu:companies",
                    "icon": "fa-institution"
                },
                "menu:companysegmentation": {
                    "position": 3,
                    "url": "/erp/#!/societe/segmentation",
                    "perms": "societe.segmentation",
                    "enabled": "conf.societe.enabled",
                    "usertype": 2,
                    "title": "companies:CustomerSegmentation",
                    "fk_menu": "menu:companies",
                    "icon": "fa-institution"
                },
                "menu:thirdpartystats": {
                    "position": 15,
                    "url": "/erp/#!/societe/stats",
                    "perms": "societe.stats",
                    "enabled": "$conf->societe->enabled",
                    "usertype": 2,
                    "title": "bills:BillsStatistics",
                    "fk_menu": "menu:companies",
                    "icon": "fa-institution"
                }
            }
        }
    }
}