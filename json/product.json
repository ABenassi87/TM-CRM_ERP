    "rights": {
        "product": [{
                "desc": "Lire les produits",
                "perm": {
                    "read": true
                }
            },
            {
                "desc": "Creer/modifier les produits",
                "perm": {
                    "create": false
                }
            },
            {
                "desc": "Supprimer les produits",
                "perm": {
                    "delete": false
                }
            },
            {
                "desc": "Exporter les produits",
                "perm": {
                    "export": false
                }
            },
            {
                "desc": "Importer les produits",
                "perm": {
                    "import": false
                }
            },
            {
                "desc": "Modifier les listes de prix",
                "perm": {
                    "priceLevel": false
                }
            }
        ]
    },
    "menus": {
