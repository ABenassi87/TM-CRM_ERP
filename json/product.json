                "menu:images": {
                    "url": "/erp/#!/product/images.html",
                    "position": 30,
                    "usertype": 2,
                    "perms": "product.read",
                    "enabled": "$conf->product->enabled",
                    "icon": "fa fa-picture-o",
                    "title": "products:Images"
                },
                "menu:productconsumption": {
                    "url": "/erp/#!/product/consumption.html",
                    "position": 40,
                    "usertype": 2,
                    "perms": "product.read",
                    "enabled": "$conf->product->enabled",
                    "icon": "fa-line-chart",
                    "title": "products:Consumptions"
